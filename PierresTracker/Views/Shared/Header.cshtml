@using PierresTracker.Models;

<div id="header">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

    <a class="navbar-brand" href="/">Vendor Tracker</a>

    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="#">Vendor Summary</a>
      </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
          Select Vendor
        </a>
        <div class="dropdown-menu">
          @foreach(Vendor vendor in Vendor.GetAll())
          {
            <a class="dropdown-item" href="/vendor/{@vendor.Id}">@vendor.Name</a>
          }
        </div>
      </li>
    </ul>
    <div class="navbar navbar-expand-sm bg-dark navbar-dark">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <span class="navbar-text">Monitor vendor orders in quick, easy steps</span>
        </li>
      </ul>
    </div>
  </nav>
</div>